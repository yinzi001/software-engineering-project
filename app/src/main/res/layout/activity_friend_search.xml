<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/background_theme"
    android:layout_height="match_parent"
    tools:context=".friend_search_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/friend_search_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/back"
            android:src="@drawable/back" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/friend_search_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/navi_button" />

        <Button
            android:id="@+id/friend_search_Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:contentDescription="@string/search_button_description"
            android:shadowColor="@color/button_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friend_search_blog_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>