<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/background_theme"
    android:layout_height="match_parent"
    tools:context=".profile_Activity">

    <ImageView
        android:id="@+id/profile_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/back"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profile_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账号"
                android:textColor="@color/title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_id"
                android:layout_width="0dp"
                android:textColor="@color/words_icon"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用户名"
                android:textColor="@color/title"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="username"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <ImageView
                android:id="@+id/profile_name_change"
                android:layout_width="69dp"
                android:layout_height="43dp"
                android:src="@drawable/yes" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="密码"
                android:textColor="@color/title"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/profile_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请输入密码"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <ImageView
                android:id="@+id/profile_password_change"
                android:layout_width="69dp"
                android:layout_height="43dp"
                android:src="@drawable/yes" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"
                android:textColor="@color/title"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/profile_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请输入性别"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <ImageView
                android:id="@+id/profile_sex_change"
                android:layout_width="69dp"
                android:layout_height="43dp"
                android:src="@drawable/yes" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>